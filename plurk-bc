# plurk(1) completion

have plurk &&
_plurk()
{
    local cur

    COMPREPLY=()
    _get_comp_words_by_ref cur
    if [ $COMP_CWORD -eq 1 ]; then
        COMPREPLY=( $( compgen -W 'add get resp count_unread get_unread del edit mute unmute favor unfavor mar replurk unreplurk get_user_pub get_user_info cliquelist cliqueuser cliquecreate cliquemv cliqueadd cliquerm blocklist block unblock' -- "$cur" ) )
    elif [ $COMP_CWORD -ge 2 ];then
        if [ "${COMP_WORDS[1]}" == "get" ]; then
            COMPREPLY=( $( compgen -W '--offset --filter' -- "$cur" ) )
        elif [ "${COMP_WORDS[1]}" == "add" ]; then
            says_cp
        elif [ "${COMP_WORDS[1]}" == "resp" ]; then
            if [ $COMP_CWORD -eq 2 ];then
                COMPREPLY=( $( compgen -W 'add get del' -- "$cur" ) )
            elif [ $COMP_CWORD -eq 4 -a "${COMP_WORDS[2]}" == "add" ];then
                says_cp
            fi
        fi
    fi

} &&
complete -F _plurk plurk

says_cp()
{
    COMPREPLY=( $( compgen -W 'loves likes shares gives hates wants has will asks wishes was feels thinks says is : freestyle hopes needs wonders' -- "$cur" ) )
}

