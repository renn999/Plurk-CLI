# plurk(1) completion

have plurk &&
_plurk()
{
    local cur

    COMPREPLY=()
    _get_comp_words_by_ref cur
    if [ $COMP_CWORD -eq 1 ]; then
        COMPREPLY=( $( compgen -W 'add get resp_add resp_get resp_del count_unread get_unread del edit mute unmute favor unfavor mar replurk unreplurk get_user_pub get_user_info cliquelist cliqueuser cliquecreate cliquemv cliqueadd cliquerm blocklist block unblock' -- "$cur" ) )
    fi
    if [ $COMP_CWORD -eq 2 -a "${COMP_WORDS[1]}" == "add" -o $COMP_CWORD -eq 3 -a "${COMP_WORDS[1]}" == "resp_add" ]; then
        COMPREPLY=( $( compgen -W 'loves likes shares gives hates wants has will asks wishes was feels thinks says is : freestyle hopes needs wonders' -- "$cur" ) )
    elif [ $COMP_CWORD -eq 2 ];then
        if [ "${COMP_WORDS[1]}" == "get" ]; then
            COMPREPLY=( $( compgen -W '--offset --filter' -- "$cur" ) )
        fi
    fi

} &&
complete -F _plurk plurk

